# BitNest Environment Template
# Copy this file to .env.local and update values

# MongoDB Connection
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/bitnest?retryWrites=true&w=majority

# Storage path
MEDIA_ROOT=/storage/external-1/BitNestMedia

# Auth Secret
NEXTAUTH_SECRET=your-jwt-secret-key
NEXTAUTH_URL=http://localhost:3000

# API endpoints
NEXT_PUBLIC_API_URL=http://localhost:3000/api 